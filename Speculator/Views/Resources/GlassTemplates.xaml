<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="GlassBigDataTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Row.Price}" HorizontalAlignment="Center" FontSize="8" FontWeight="Bold"/>
            <TextBlock Text="{Binding Row.Volume}" HorizontalAlignment="Center" FontSize="8" FontWeight="Bold"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="GlassNormalDataTemplate">
        <Grid>
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Background" Value="IndianRed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Row.IsBid}" Value="True">
                            <Setter Property="Background" Value="CornflowerBlue" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding Row.Price}" HorizontalAlignment="Center" FontSize="8" FontWeight="Normal"/>
            <TextBlock Grid.Column="1" Text="{Binding Row.Volume}" HorizontalAlignment="Center" FontSize="8" FontWeight="Normal"/>
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="GlassSmallDataTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Row.Price}" HorizontalAlignment="Center" FontSize="8" FontWeight="Bold"/>
            <TextBlock Text="{Binding Row.Volume}" HorizontalAlignment="Center" FontSize="8" FontWeight="Bold"/>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="GlassMicroDataTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Row.Price}" HorizontalAlignment="Center" FontSize="8" FontWeight="Normal"/>
            <TextBlock Text="{Binding Row.Volume}" HorizontalAlignment="Center" FontSize="8" FontWeight="Normal"/>
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>